  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.12.2",
    "dotenv": "^17.2.2",
    "viem": "^2.0.0",
    "x402-axios": "^0.6.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "typescript": "^5.9.2"
  }
}
